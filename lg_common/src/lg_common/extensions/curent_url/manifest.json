{
    "manifest_version": 2,

    "name":           "curent_url",
    "version":        "0.1",
    "description":    "Publish data about curent url",

    "background": {
        "persistent": true,
        "scripts": [
            "get_args.js",  "eventemitter2.min.js", "roslib.min.js", "curent_url.js"
        ]
    },

    "permissions":    [
        "<all_urls>", "webNavigation",
        "tabs", "history"
    ]
}
