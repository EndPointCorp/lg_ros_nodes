<launch>
    <node name="lg_stats" pkg="lg_stats" type="stats.py">
        <param name="time_resolution" value="10"/>
        <!-- test how lg_activity is parsing it, make that code common -->
        <param name="activity_sources" value="TOPIC:MSG_TYPE:VALUE_OF_INTEREST;AND ANOTHER; ..."/>
    </node>

    <!-- Local rosbridge and rosapi. -->
    <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" >
        <arg name="port" value="9875" />
    </include>

    <test test-name="test_lg_stats" pkg="lg_stats" type="test_lg_stats.py"/>
</launch>
