<launch>
    <node name="lg_stats" pkg="lg_stats" type="stats.py">
        <param name="resolution" value="1"/>
        <param name="submission_type" value="InfluxDirect"/>
        <param name="host" value="localhost"/>
        <param name="port" value="8086"/>
        <param name="database" value="statstestdb"/>
        <param name="activity_sources" value="/director/scene:interactivespaces_msgs/GenericMessage-message.slug:default;/appctl/mode:appctl/Mode-mode:default;/activity/active:std_msgs/Bool-data:default;/spacenav/twist:geometry_msgs/Twist-angular:count;/proximity/distance:sensor_msgs/Range-range:average"/>
        <param name="inactivity_resubmission" value="60"/>
    </node>

    <test test-name="test_lg_stats" pkg="lg_stats" type="test_lg_stats.py"/>
</launch>
